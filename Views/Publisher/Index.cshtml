@model IEnumerable<Publisher>

@{
    ViewData["Title"] = "List of Publishers";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table">
            <thead>
                <tr class=" text-center">
                    <th>@Html.DisplayNameFor(model =>model.Logo)</th>
                    <th>@Html.DisplayNameFor(model =>model.PublisherName)</th>
                    <th>@Html.DisplayNameFor(model =>model.Description)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            <img class="rounded-circle" src="@item.Logo" alt="@item.PublisherName" style="max-width:150px" />
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.PublisherName)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-secondary"><i class=" bi bi-pencil-square">Edit</i></a>
                            <a class="btn btn-info text-white"><i class=" bi bi-eye">Details</i></a>
                            <a class="btn btn-danger"><i class=" bi bi-trash">Delete</i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>