@model Platforms

@{
    ViewData["Title"] = "Add a new Platform";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Details for @Model.PlatformName</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                
                    
                    <div class="form-group text-center">
                        <img class="border-info rounded-circle " style="max-width:150px;"   id="PlatformPicturePreview" />
                    </div>
                    <div class="form-group">
                        <label asp-for="PlatformPicture" class="control-label"></label>
                        <input asp-for="PlatformPicture" class="form-control" readonly />
                        <span asp-validation-for="PlatformPicture" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PlatformName" class="control-label"></label>
                        <input asp-for="PlatformName" class="form-control" readonly/>
                        <span asp-validation-for="PlatformName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="control-label"></label>
                        <input asp-for="Description" class="form-control" readonly/>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <a class="btn btn-outline-success float-right" asp-action="Edit" asp-route-id="@Model.PlatformId">Edit</a>
                        <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                    </div>
               
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            var output = document.getElementById('PlatformPicturePreview');
            output.src = $("#PlatformPictures").val();
        })
    </script>
}
