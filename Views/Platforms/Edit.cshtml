
@model Platforms

@{
    ViewData["Title"] = "Update Platform";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Update Platforms</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group text-center">
                        <img class="border-info rounded-circle " style="max-width:150px;" id="PlatformPicturePreview" />
                    </div>
                    <div class="form-group">
                        <label asp-for="PlatformPicture" class="control-label"></label>
                        <input asp-for="PlatformPicture" class="form-control" />
                        <span asp-validation-for="PlatformPicture" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PlatformName" class="control-label"></label>
                        <input asp-for="PlatformName" class="form-control" />
                        <span asp-validation-for="PlatformName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="control-label"></label>
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Update" class="btn btn-outline-success float-right" />
                        <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts{ 
    <script>
        $(document).ready(function()
        {
            var output = document.getElementById('PlatformPicturePreview');
            output.src = $("#PlatformPictures").val();
        })
        $("#PlatformPicture").on("change", function () {
            var output = document.getElementById('PlatformPicturePreview');
            output.src = $(this).val();
        })
    </script>
}