@model IEnumerable<Platforms>

@{
    ViewData["Title"] = "List of Platforms";
}

<div class = "row">
    <div class="col-md-8 offset-md-2">
        <table class="table"> 
            <thead>
                <tr class=" text-center">
                    <th>@Html.DisplayNameFor(model =>model.PlatformPicture)</th>
                    <th>@Html.DisplayNameFor(model =>model.PlatformName)</th>
                    <th>@Html.DisplayNameFor(model =>model.Description)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            <img class="rounded-circle"src="@item.PlatformPicture" alt ="@item.PlatformName" style="max-width:150px"/>
                        </td>
                        <td class ="align-middle">
                            @Html.DisplayFor(modelItem => item.PlatformName)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-secondary"><i class=" bi bi-pencil-square">Edit</i></a>
                            <a class="btn btn-info text-white"><i class=" bi bi-eye">Details</i></a>
                            <a class="btn btn-danger"><i class=" bi bi-trash">Delete</i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>

<div class="text-white" style="position:fixed; right: 25px; bottom:25px;">
    <a asp-controller="Platforms" asp-action="Create" class="btn btn-success"><i class="bi bi-plus-circle"> Add New</i></a>
</div> 